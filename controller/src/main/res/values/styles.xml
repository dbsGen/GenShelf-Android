    <attr name="leftIcon" format="reference"/>
    <attr name="rightIcon" format="reference"/>
    <attr name="popAnimation" format="reference"/>
    <attr name="pushAnimation" format="reference"/>
    <attr name="fadeInAnimation" format="reference"/>
    <attr name="fadeOutAnimation" format="reference"/>
